<div class="ae-editor"
     style="@ContainerStyle"
     role="group"
     @attributes="GetContainerAriaAttributes()">
    <div id="ae-toolbar"
         class="ae-toolbar"
         style="@ToolbarStyle"
         @attributes="GetToolbarAriaAttributes()">
        @* Intentionally empty for this increment *@
    </div>

    <div class="ae-content-wrapper" style="@ContentWrapperStyle">
        @if (ShowPlaceholder)
        {
            <div id="ae-placeholder" class="ae-placeholder" style="@PlaceholderStyle">@Placeholder</div>
        }
        <div id="ae-content"
             class="ae-content"
             role="textbox"
             contenteditable="true"
             style="@ContentStyle"
             tabindex="0"
             @oninput="OnInputAsync"
             @onfocus="HandleFocusAsync"
             @onblur="HandleBlurAsync"
             @attributes="GetContentAriaAttributes()"
             aria-describedby="@ContentDescribedBy"
             @ref="_contentRef">
            @((MarkupString)Text)
        </div>
    </div>

    <div id="ae-status"
         class="ae-status"
         style="@StatusStyle"
         @attributes="GetStatusAriaAttributes()">
        @* Intentionally empty for this increment *@
    </div>
</div>
